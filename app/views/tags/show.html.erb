

<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<% if logged_in? %>
<p><%= link_to 'Delete Tag', tag_path(@tag), method: :delete, data: {confirm: "Really delete it?"} %></p>
<% end %>
<p><%= link_to "Back to Tags List", tags_path %></p>

